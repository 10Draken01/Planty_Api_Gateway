{
  "name": "api-chatbot",
  "version": "1.0.0",
  "description": "Microservicio de chatbot inteligente con RAG (Retrieval-Augmented Generation) usando Ollama y ChromaDB",
  "main": "dist/app.js",
  "scripts": {
    "dev": "set NODE_OPTIONS=--max-old-space-size=8192 && ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/app.ts",
    "dev:watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r tsconfig-paths/register src/app.ts",
    "build": "tsc",
    "start": "node --max-old-space-size=8192 dist/app.js",
    "init-pdf": "node scripts/init-pdf.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "chatbot",
    "rag",
    "ollama",
    "chromadb",
    "typescript",
    "microservice"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "chromadb": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.0",
    "helmet": "^8.0.0",
    "langchain": "^1.0.3",
    "multer": "^1.4.5-lts.1",
    "ollama": "^0.5.0",
    "pdf-parse": "^1.1.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.6",
    "@types/pdf-parse": "^1.1.4",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
